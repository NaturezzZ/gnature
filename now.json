{
    "version": 2,
    "name": "mirror",
    "regions": [
        "hnd1",
        "icn1",
        "sin1"
    ],
    "builds": [
        {
            "src": "*.go",
            "use": "@now/go@canary"
        }
    ],
    "build": {
        "env": {
            "GO111MODULE": "on"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.go"
        }
    ]
}